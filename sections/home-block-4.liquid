<div class="home4-block-collection home4-{{ section.id }} loadding" style="margin:{{section.settings.home_block_4}}">
  {% if section.settings.enable_block_fullwidth %} 
  <div class="full-width">
    {% else %}
    <div class="container">
      {% endif %}
      {% if section.settings.home4_collection_title_wr != blank %}
      <div class="heading-block">
        <h3 class="title">
          {% if settings.enable_multilang %}
          <span class="lang1">{{ section.settings.home4_collection_title_wr | split: '|' | first }}</span>
          <span class="lang2">{{ section.settings.home4_collection_title_wr | split: '|' | last }}</span>
          {% else %}
          {{ section.settings.home4_collection_title_wr | split: '|' | first }}
          {% endif %}
        </h3>

      </div>
      {% endif %}
      <div {% if section.settings.display_layout == 'carousel'  %} id="block-{{section.id}}"{% else %} class="row center slider"{% endif %}>
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {%- case block.settings.width -%}
        {% when '16%' %}
        {%- assign class_width = 'col-md-2' -%}
        {% when '25%' %}
        {%- assign class_width = 'col-md-3' -%}
        {% when '34%' %}
        {%- assign class_width = 'col-md-4' -%}
        {% when '42%' %}
        {%- assign class_width = 'col-md-5' -%}
        {% when '50%' %}
        {%- assign class_width = 'col-md-6' -%}
        {% when '58%' %}
        {%- assign class_width = 'col-md-7' -%}
        {% when '66%' %}
        {%- assign class_width = 'col-md-8' -%}
        {% when '75%' %}
        {%- assign class_width = 'col-md-9' -%}
        {% when '84%' %}
        {%- assign class_width = 'col-md-10' -%}
        {% when '100%' %}
        {%- assign class_width = 'col-md-12' -%}
        {%- endcase -%}

        <div class="{% if block.settings.home4_position_text_1 == 'bottom_center' %}block-carousel {% endif %}{% if block.settings.home4_position_text_1 == 'top_center' %}top-center {% endif %}
                    {% if block.settings.home4_position_text_1 == 'left_bottom' %}left-bottom {% endif %}
                    {% if block.settings.home4_position_text_1 == 'milde_center' %}milde-center {% endif %}{{class_width}} home-collection-wr home-collection-{{ block.id }}" style="padding:{{block.settings.home_block_padding }}">
          <div class="home-collection-item home-collection-item-1">
            {% if block.settings.bg_home4_collection_1 != blank %}
            <a href="{{ block.settings.home4_collection_1 }}">
              <img src="{{ block.settings.bg_home4_collection_1 | img_url: '2048x'  }}">
            </a>
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="home-collection-title-wrapper{% if block.settings.home4_position_text_1 == 'text_relative' %} home4-bottom{% endif %}{% if block.settings.home4_position_text_1 == 'left_center' %} home4-left-center{% endif %}"
                 style="{% if block.settings.home4_position_text_1 == 'milde_center' %}text-align:center;left:50%;top:50%;width:100%;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);-moz-transform: translate(-50%,-50%);{% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'left_top' %} text-align:left;left:{{ block.settings.home4_position_text_ofsetx_1 }}px;top:{{ block.settings.home4_position_text_ofsety_1 }}px;{% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'left_bottom' %}  left:{{ block.settings.home4_position_text_ofsetx_1 }}px;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px;{%endif %} 
                                                              {% if block.settings.home4_position_text_1 == 'right_top' %} right:{{ block.settings.home4_position_text_ofsetx_1 }}px;top:{{ block.settings.home4_position_text_ofsety_1 }}px;{% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'right_bottom' %}  right:{{ block.settings.home4_position_text_ofsetx_1 }}px;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px; {% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'bottom_center' %}text-align:left;left:50%;top:auto;bottom:{{ block.settings.home4_position_text_ofsety_1 }}px;transform: translateX(-50%);-webkit-transform: translateX(-50%);-moz-transform: translateX(-50%);{% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'top_center' %}text-align:left;top:{{ block.settings.home4_position_text_ofsety_1 }}px;bottom:auto;left:50%;transform: translateX(-50%);-webkit-transform: translateX(-50%);-moz-transform: translateX(-50%);{% endif %}
                                                              {% if block.settings.home4_position_text_1 == 'left_center' %}text-align:left;top:50%;bottom:auto;left:{{ block.settings.home4_position_text_ofsetx_1 }}px;transform: translateY(-50%);-webkit-transform: translateY(-50%);-moz-transform: translateY(-50%);{% endif %}
              												  {% if block.settings.home4_position_text_1 == 'right_center' %}text-align:center;top:50%;bottom:auto;right:{{ block.settings.home4_position_text_ofsetx_1 }}px;transform: translateY(-50%);-webkit-transform: translateY(-50%);-moz-transform: translateY(-50%);{% endif %}">
              <div class="home-collection-title">
                {% if block.settings.home4_collection_title_1 != blank %}
                <h3 class="h5">
                    {% if settings.enable_multilang %}
                    <span class="lang1">{{ block.settings.home4_collection_title_1 | split: '|' | first }}</span>
                    <span class="lang2">{{ block.settings.home4_collection_title_1 | split: '|' | last }}</span>
                    {% else %}
                    {{ block.settings.home4_collection_title_1 | split: '|' | first }}
                    {% endif %}
                </h3>
                {% endif %}
                {% if block.settings.home4_collection_subtitle_1 != blank %}
                <p class="content-sub">
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ block.settings.home4_collection_subtitle_1 | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.home4_collection_subtitle_1 | split: '|' | last }}</span>
                  {% else %}
                  {{ block.settings.home4_collection_subtitle_1 | split: '|' | first }}
                  {% endif %}
                </p>
                {% endif %}
                {% if block.settings.home4_collection_textlink_1 != blank %}
                <p class="link-home4">
                  {% if settings.enable_multilang %}
                  <span class="lang1"><a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | first }}</a></span>
                  <span class="lang2"><a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | last }}</a></span>
                  {% else %}
                  <a href="{{ block.settings.home4_collection_1 }}">{{ block.settings.home4_collection_textlink_1 | split: '|' | first }}</a>
                  {% endif %}
                </p>
                {% endif %}
              </div>
            </div>
          </div>
          <style>
            .home4-block-collection .home-collection-{{ block.id }} .home-collection-title .link-home4 a {background: {{section.settings.button_label_bg}};color: {{section.settings.button_label_color}} }
            .home4-block-collection .home-collection-{{ block.id }} .home-collection-title .link-home4 a:hover {background: {{section.settings.button_label_bg_hover}};color: {{section.settings.button_label_color_hover}}; }
            
            .home4-block-collection .home-collection-{{ block.id }} .home-collection-title h3.h5 {color: {{block.settings.title_color}};}
            .home4-block-collection .home-collection-{{ block.id }} .home-collection-title .content-sub {color: {{block.settings.title_color}};}
          </style>
        </div>


        {% endfor%}
        {% endif %}

      </div>

    </div>
  </div>

  {% if section.settings.display_layout == 'carousel'  %} 
  <script>
    $(document).ready(function() {
      $("#block-{{section.id}}").owlCarousel({
        itemsCustom : [
        [300, 1],
        [360, 1],
        [450, 1],
        [600, 2],
        [700, 3],
        [768, 3],
        [1000, 3],
        [1200, {{ section.settings.home4_collection_carousel_item }}],
        [1400, {{ section.settings.home4_collection_carousel_item }}],
        [1600, {{ section.settings.home4_collection_carousel_item }}]
        ],
        autoPlay : false,
        stopOnHover : false,

        lazyLoad : false,
        lazyFollow : true,
        lazyEffect : "fade",
        pagination : false,

        // Navigation
        navigation : true,
        navigationText : ['<i class="cs-font clever-icon-prev"></i>','<i class="cs-font clever-icon-next"></i>'],
        rewindNav : true,
        scrollPerPage : false,

        });

    })

  </script>
  {% endif %}
  <script>
    jQuery(document).ready(function() {
      $(window).on('load', function() {
        setTimeout( function(){
          jQuery('.home4-block-collection').removeClass('loadding');
        },1000)
      })

    });
  </script>
  {% if section.settings.display_background_color %}
  <style>
    .home4-block-collection.home4-{{ section.id }} .home-collection-item > a:before {
      content: "";
      background: rgba(0,0,0,0.5);
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 9;
      opacity: 0;
      transition: opacity .3s;
    }
    .home4-block-collection.home4-{{ section.id }} .home-collection-item:hover > a:before {opacity: 1;}
  </style>
  {% endif %}
